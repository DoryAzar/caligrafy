extends ../default/master/layoutblocks

block content
    div(class='content-section bounded-xlarge color4')
        div(class='wrapper width-max-600')
            .spacer-4
            .card(class="horizontal-center color0 equally-spaced-1 dropshadow")
                section(class='main-section horizontal-left color0')
                    if $error
                        include ../default/modules/messaging
                    .spacer-2
                    if $authorized
                        .spacer-2
                        p(class='medium-text') Welcome to Caligrafy. You are now signed in.
                        .spacer-4
                        .horizontal-center
                            a(href="{$home}projects" class='btn btn-default btn-lg ') discover my projects
                        .spacer-2
                    else
                        form(id='login_form', method='POST', enctype="multipart/form-data", action="{$home}login")
                            =csrf()
                            .form-group
                                label(for='username', class='default-text textcolor5') * username
                                input(type='text', name='username', id='username' class='form-control input-default', required, placeholder='Enter a username', maxlength='100')

                            .form-group
                                label(for='passcode', class='default-text textcolor5') * passcode
                                input(type='password', name='passcode', id='passcode' class='form-control input-default', required, placeholder='Enter a passcode', maxlength='20')
                            .spacer-4    


                            input(class='btn btn-primary btn-default btn-block', type='submit' value='Sign in')
                            .spacer-1


            .card(class="horizontal-center color0 equally-spaced-1 dropshadow")
                p(class="medium-text") Don't have an account? 
                a(href="{$home}register", class='btn btn-default input-size-150') Sign up

    .spacer-3
            